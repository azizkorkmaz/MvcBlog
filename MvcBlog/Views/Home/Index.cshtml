
@using PagedList
@using PagedList.Mvc

@model IPagedList<MvcBlog.Models.Makale>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12" style="padding-top:-5px">
    @foreach (var item in Model)
    {
        <div class="col-md-12" style="padding-top:15px">
            <article class="col-md-12" style="background-color:gainsboro">
                <h2>
                    <a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a>
                </h2>
                <p class="lead">
                    <span> <img class="img-circle img-responsive" src="@item.Uye.Foto" alt="@item.Uye.KullaniciAdi" /></span>
                    <a href="/Uye/UyeProfil/@item.Uye.UyeId">@item.Uye.KullaniciAdi</a>

                    <span class="glyphicon glyphicon-time"></span> @string.Format("{0:MMM yyyy}", item.Tarih)
                    <span class="glyphicon glyphicon-tags"></span> @item.Etikets.Count()
                </p>

                <hr />
                <img class="img-responsive" src="@item.Foto" alt="@item.Uye.KullaniciAdi" />
                <hr />
                @if (item.Icerik.Length > 250)
                {
                    <p> @Html.Raw(item.Icerik.Substring(0, 250))...</p>
                }
                else
                {
                    <p>@Html.Raw(item.Icerik)...</p>
                }

                <a href="/Home/MakaleDetay/@item.MakaleId" class="btn btn-primary" id="oku">
                    Devamını Oku
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
                <hr />
            </article>
        </div>
    }

    <div class="row">
        <div class="col-md-12 text-center">
            <div class="pagedList pagination-lg text-center">
                @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), PagedListRenderOptions.Classic)
            </div>
        </div>
    </div>
</div>
