@model IEnumerable<MvcBlog.Models.Kategori>

@{
    Layout = null;
}

<h4>Kategoriler</h4>
<div class="row">
    <div class="col-lg-6">
        @foreach (var ktg in Model)
        {
            <ul class="list-unstyled">
                <li>
                    <a href="/Home/KategoriMakale/@ktg.KategoriId">@ktg.KategoriAdi (@ktg.Makales.Count())</a>
                </li>

            </ul>
        }

    </div>
</div>






