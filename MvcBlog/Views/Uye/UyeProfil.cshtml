@model MvcBlog.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UyeProfil</h2>

<div class="col-md-8">
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Yetki.YetkiAdi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.YetkiAdi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
            <img src="@Model.Foto" width="95" class="img-circle" alt="@Model.AdSoyad" />
        </dd>

    </dl>
   
    <div class="row col-md-8 center-block">
        <h4>Son Eklediği Makaleler</h4>
        @foreach (var item in Model.Makales.OrderByDescending(m => m.MakaleId).Take(5))
        {
            <li><a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik</a></li>
        }
    </div>
</div>

